{
  "manifest_version": 3,
  "name": "SidePlay - Spatial Audio Controller",
  "description": "Lightweight Chrome extension for precise control over spatial audio. Isolate tab audio to left or right channel with a single click.",
  "version": "1.0.1",
  "permissions": [
    "activeTab",
    "tabCapture",
    "storage",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
